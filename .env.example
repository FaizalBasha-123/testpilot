# ===========================================
# TestPilot - Root Environment Variables
# ===========================================
# Copy this file to .env and fill in values

# ---- GitHub OAuth App ----
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
# Canonical gateway URL for this codebase state (Render-hosted gateway).
GITHUB_OAUTH_REDIRECT=https://testpilot-64v5.onrender.com/auth/callback
GITHUB_WEBHOOK_SECRET=

# ---- GitHub App (for webhooks) ----
GITHUB_APP_ID=
GITHUB_APP_PRIVATE_KEY=
GITHUB_APP_INSTALL_URL=https://github.com/apps/your-app/installations/new

# ---- JWT ----
JWT_SECRET=generate-with-openssl-rand-hex-32

# ---- URLs ----
FRONTEND_URL=https://your-app.vercel.app
BACKEND_URL=https://testpilot-64v5.onrender.com

# ---- Database ----
DATABASE_URL=postgres://user:pass@host:5432/dbname
POSTGRES_PASSWORD=your-db-password

# ---- SonarQube ----
SONARQUBE_URL=http://your-sonarqube-ip:9000
SONARQUBE_TOKEN=
SONARQUBE_PASSWORD=

# ---- AI Models ----
OPENROUTER_API_KEY=
GROQ_API_KEY=
OPENAI_API_KEY=
GROQ_EMBEDDING_API_KEY=
# Default LLM model (Groq direct)
CONFIG__MODEL=groq/llama-3.3-70b-versatile
# Optional Groq OpenAI-compatible base (LLM)
GROQ_API_BASE=https://api.groq.com/openai/v1
# Groq OpenAI-compatible endpoint for embeddings
EMBEDDING_API_BASE=https://api.groq.com/openai/v1
# Groq embedding model (cost-efficient default)
EMBEDDING_MODEL=text-embedding-3-small

# ---- Service URLs (for Docker) ----
AI_CORE_URL=http://ai-core:3000
AI_REVIEW_WEBHOOK_URL=
SONAR_SERVICE_URL=http://sonar-scanner:8000
ENABLE_MOCK_REVIEW=false
